<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="icon" href="/images/smileyface1.png" type="image/x-icon">
    <link rel="stylesheet" href="/style.css">
    <script src="/app.js"></script>
    <title>Xavier's Archive </title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Xavier's Archive</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    <div class="container">
        <br>
        <div class="text"><h2>Product Details</h2></div>
        <% if (product) { %> <!-- Check if product data exists -->
            <div class="box">
                <div class="text"><p><b>Product Image:</b><br></div> <img src="/images/<%= product.image %>" width="60%"></p>
                <div class="text"><p><b>Product Name:<br></div><%= product.name %> </p>
                <div class="text"><p><b>Description:</b><br></div> <%= product.description %></p>
                <div class="text"><p><b>Price:</b><br></div> $<%= product.price.toFixed(2) %></p> 
                <button><a href="/deleteProduct/<%=product.id %>"onclick="return confirm
                ('Are you sure you want to delete this product?')">Delete</button>
                <br>
                <br>
                <input type="button" id="insertbutton" onclick="window.location.href='/'" value="Back to the Homepage "</input>
        <% } else { %>
            <p>No product found.</p>
        <% } %>
        <br>
            
      </div>
    </div>

    
</body>
</html>
